using System.Security.Cryptography.X509Certificates;

namespace Prueva_final_XD
{
    internal class Program
    {
        static Puntos puntuacion = new Puntos();
        static void Main(string[] args)
        {
            Random random = new Random();
            Puntos puntos = new Puntos();

            int numero1 = random.Next(1, 3);
            for(int i = puntuacion.puntos; i <= 100; i ++)
            {
                Console.WriteLine("Responde Correctamente: ");
                if (numero1 == 1)
                {
                    Pregunta1();
                }
                else if (numero1 == 2)
                {
                    Pregunta2();
                }
                Console.WriteLine("Puntuacion: " + puntuacion.puntos);
            }
            
        }

        public static void Pregunta1()
        {
            Console.WriteLine("diga el # de su respuesta");
            Console.WriteLine("Cual es el creador de Flat World?");
            Console.WriteLine("1. Ginxu. 2. Alvamajo.");
            if(int.TryParse(Console.ReadLine(), out int respuesta1))
            {
                if (respuesta1 == 1)
                {
                    Console.WriteLine("Correcto");
                    Puntos puntos = new Puntos();
                    int puntuacion1 = puntos.puntos;
                    puntuacion1 = puntuacion1 + 1;
                }
                else if (respuesta1 == 2)
                {
                    Console.WriteLine("Incorrecto");
                }
                else
                { 
                    Console.WriteLine("Opcion no existente");
                }
            }           
        }

        public static void Pregunta2()
        {
            Console.WriteLine("Cual es el mejor Souls?");
            Console.WriteLine("1. DS1. 2. DS2.");
            if(int.TryParse(Console.ReadLine(), out int jugadorInput))
            {
              if(jugadorInput == 1)
              {
                    Console.WriteLine("Correcto ");
              }
              else if(jugadorInput == 2)
              {
                    Console.WriteLine("Mal");
              }
              else
              {
                    Console.WriteLine("Respuesta no existente");
              }
            }
        }
    }

    class Puntos
    {
        public int puntos = 0;
    }
}
